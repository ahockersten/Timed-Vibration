<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@+string/First_vibration" >
        <EditTextPreference
            android:defaultValue="1"
            android:key="pref_first_times_to_vibrate"
            android:numeric="integer"
            android:summary="@+string/The_number_of_times_to_vibrate_at_the_first_vibration_interval"
            android:title="@+string/Times_to_vibrate" />
        <EditTextPreference
            android:defaultValue="100"
            android:key="pref_first_vibration_duration"
            android:numeric="integer"
            android:summary="@+string/The_time_each_vibration_should_last_in_milliseconds"
            android:title="@+string/Duration" />
        <EditTextPreference
            android:defaultValue="100"
            android:key="pref_first_vibration_rest_duration"
            android:numeric="integer"
            android:summary="@+string/The_time_to_wait_between_each_vibration_in_milliseconds"
            android:title="@+string/Rest_duration" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@+string/Second_vibration" >
        <EditTextPreference
            android:defaultValue="2"
            android:key="pref_second_times_to_vibrate"
            android:numeric="integer"
            android:summary="@+string/The_number_of_times_to_vibrate_at_the_second_vibration_interval"
            android:title="@+string/Times_to_vibrate" />
        <EditTextPreference
            android:defaultValue="100"
            android:key="pref_second_vibration_duration"
            android:numeric="integer"
            android:summary="@+string/The_time_each_vibration_should_last_in_milliseconds"
            android:title="@+string/Duration" />
        <EditTextPreference
            android:defaultValue="100"
            android:key="pref_second_vibration_rest_duration"
            android:numeric="integer"
            android:summary="@+string/The_time_to_wait_between_each_vibration_in_milliseconds"
            android:title="@+string/Rest_duration" />
    </PreferenceCategory>

</PreferenceScreen>
