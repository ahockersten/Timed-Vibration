<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<TextView
        android:id="@+id/mainPractice.tvIntervalSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/interval_to_vibrate_at" />
	
    <Spinner
        android:id="@+id/mainPractice.spinIntervalSingle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/mainPractice.tvIntervalDouble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/interval_to_double_vibrate_at" />

    <Spinner
        android:id="@+id/mainPractice.spinIntervalDouble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/mainPractice.btnStart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+string/start_counting" />
</LinearLayout>