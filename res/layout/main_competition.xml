<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/mainCompetition.btnStart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@+string/start_counting" />
    <TextView
        android:id="@+id/mainCompetition.tvLastResult" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@+string/last_result" />
    <Button
        android:id="@+id/mainCompetition.btnTap"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:gravity="top"
        android:text="@+string/tap_me" />

</LinearLayout>

